<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sustcse.besafe">

    <permission
        android:name="com.sustcse.besafe.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <!-- Adding the permission -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.creative.womenssafety.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- For receiving GCM messages -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- For protecting GCM messages so that only your app can receive them -->
    <permission
        android:name="com.androidsrc.gcmsample.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.androidsrc.gcmsample.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name="com.sustcse.besafe.appdata.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sustcse.besafe.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name="com.sustcse.besafe.MapActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />
        </activity>
        <activity
            android:name="com.sustcse.besafe.userInfoView.PoliceInfo"
            android:label="@string/activity_police_info"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />
        </activity>
        <activity
            android:name="com.sustcse.besafe.userInfoView.HospitalInfo"
            android:label="@string/activity_hospital_info"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />
        </activity>
        <activity
            android:name="com.sustcse.besafe.userInfoView.HistoryList"
            android:label="@string/activity_history_list"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />
        </activity>
        <!-- For receiving GCM message and registration success -->
        <receiver
            android:name="com.sustcse.besafe.receiver.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.creative.womenssafety.receiver" />
            </intent-filter>
        </receiver>

        <service android:name="com.sustcse.besafe.service.GCMIntentService" />
        <service
            android:name="com.sustcse.besafe.service.MyService"
            android:enabled="true" />
        <service android:name="com.sustcse.besafe.service.LockScreenService" />

        <!-- Goolge API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBCY4ekfsMbuHBqB4cCSc4fA3M6YC3Isr4" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.sustcse.besafe.userview.UserLoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sustcse.besafe.userview.UserRegistrationActivity"
            android:label="@string/title_activity_user_registration"
            android:parentActivityName="com.sustcse.besafe.userview.UserLoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.userview.UserLoginActivity" />
        </activity>
        <activity
            android:name="com.sustcse.besafe.UserSettingView.ManageSmsList"
            android:label="Mange SMS List"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />
        </activity>
        <activity
            android:name="com.sustcse.besafe.utils.ContactListPickerUtils"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.sustcse.besafe.HeatMapActivity"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />
        </activity>
        <activity
            android:name="com.sustcse.besafe.UserSettingView.UserSettingActivity"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />
        </activity>
        <activity
            android:name="com.sustcse.besafe.HowToUse.HowToUse"
            android:label="@string/title_activity_how_to_use"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />

        </activity>

        <activity
            android:name="com.sustcse.besafe.userInfoView.AboutUs"
            android:label="@string/title_about_us"
            android:screenOrientation="portrait"
            android:parentActivityName="com.sustcse.besafe.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sustcse.besafe.MainActivity" />

        </activity>

    </application>

</manifest>
